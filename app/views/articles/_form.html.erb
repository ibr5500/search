<div class= "form new-article-form text-center">
<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='mb-2 rounded'>
    <%= form.text_field :title, placeholder: "Article's title", class: "form-control" %>
  </div>

  <div class='mb-2 rounded'>   
    <%= form.text_area :body, placeholder: "Article's body", class: "form-control" %>
  </div>

  <div class='new-article-btn rounded'>
    <%= form.submit %>
  </div>
<% end %>
</div>
